ARG GO_IMAGE_BASE_TAG=1.24
FROM --platform=$BUILDPLATFORM golang:${GO_IMAGE_BASE_TAG} AS builder

ARG TARGETOS
ARG TARGETARCH

RUN apt update && apt install -y jq

WORKDIR /go/src/app

COPY go.mod .
COPY go.sum .
RUN --mount=type=cache,target=/go/pkg/mod \
    go mod download

COPY . .
RUN --mount=type=cache,target=/go/pkg/mod \
    --mount=type=cache,target=/root/.cache/go-build \
    make GOOS=$TARGETOS GOARCH=$TARGETARCH

FROM --platform=$TARGETPLATFORM registry.access.redhat.com/ubi9-minimal

RUN microdnf -y install openssl && microdnf clean all

WORKDIR /app
COPY --from=builder /go/src/app/test/integration/bin ./

CMD ["ls"]
